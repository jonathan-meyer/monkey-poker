{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "lib": ["ES2019", "ES5", "DOM"],
    "declaration": true,
    "outDir": "build",
    "sourceMap": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "allowJs": true,
    "strictNullChecks": false,
    "isolatedModules": true
  },
  "include": ["src/server", "src/model"],
  "exclude": ["node_modules", "**/__tests__"]
}
